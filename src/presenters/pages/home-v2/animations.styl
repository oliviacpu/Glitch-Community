/* DISCOVER ANIMATION */

.cat
  animation-name: wobble
  animation-timing-function: ease-in
  animation-duration: 3.5s
  animation-iteration-count: infinite

.tetris
  animation-name: tetris
  animation-timing-function: ease-in
  animation-duration: 3.5s
  animation-iteration-count: infinite

.react
  animation-name: spin
  animation-timing-function: ease-in
  animation-duration: 3.5s
  animation-fill-mode: forwards
  animation-iteration-count: infinite
  animation-direction: normal

.note1
 animation-name: tilt
 animation-timing-function: ease-in
 animation-duration: 3.5s
 animation-fill-mode: forwards
 animation-iteration-count: infinite
 animation-direction: normal

.note2
 animation-name: tilt-inv
 animation-timing-function: ease-in
 animation-duration: 3.5s
 animation-fill-mode: forwards
 animation-iteration-count: infinite
 animation-direction: normal


@keyframes tilt
  0%
    transform: rotate(0deg)
    transform-origin: 93.03px 27.8px
  75%
    transform: rotate(0deg)
    transform-origin: 93.03px 27.8px
  77%
    transform: rotate(5deg)
    transform-origin: 93.03px 27.8px

@keyframes tilt-inv
  0%
    transform: rotate(0deg)
    transform-origin: 111.34px 3.83px  
  75%
    transform: rotate(0deg)
    transform-origin: 111.34px 3.83px
  80%
    transform: rotate(-5deg)
    transform-origin: 111.34px 3.83px

@keyframes tetris
  0%
    transform: rotate(0deg)
    transform-origin: 20.74px 84.24px
  20%
    transform: rotate(0deg)
    transform-origin: 20.74px 84.24px
  30%
    transform: rotate(90deg)
    transform-origin: 20.74px 84.24px
  40%
    transform: rotate(90deg)
    transform-origin: 20.74px 84.24px
  50%
    transform: rotate(180deg)
    transform-origin: 20.74px 84.24px
  60%
    transform: rotate(180deg)
    transform-origin: 20.74px 84.24px
  70%
    transform: rotate(270deg)
    transform-origin: 20.74px 84.24px
  80%
    transform: rotate(270deg)
    transform-origin: 20.74px 84.24px
  90%
    transform: rotate(360deg)
    transform-origin: 20.74px 84.24px
  100%
    transform: rotate(360deg)
    transform-origin: 20.74px 84.24px

@keyframes wobble
  0%
    transform: rotate(0deg)
  20%
    transform: rotate(1deg)
  40%
    transform: rotate(0deg)

@keyframes spin
  0%
    transform: rotate(0deg)
    transform-origin: 48.5px 27.839281px
  60%
    transform: rotate(30deg)
    transform-origin: 48.5px 27.839281px
  100%
    transform: rotate(0deg)
    transform-origin: 48.5px 27.839281px


/* CREATORS ANIMATION */

/* @keyframes duration | timing-function | delay | 
iteration-count | direction | fill-mode | play-state | name */

.animationPath
  stroke-dasharray: 1000
  stroke-dashoffset: 1000
  animation-name: dash
  animation-timing-function: linear
  animation-duration: 3.5s
  animation-fill-mode: forwards
  animation-iteration-count: infinite

.browser
  opacity: 0
  animation-name: appear-create
  animation-duration: 3.5s
  animation-fill-mode: forwards
  animation-iteration-count: infinite

.sparkles
  opacity: 0
  animation-name: appear-create
  animation-duration: 3.5s
  animation-fill-mode: forwards
  animation-iteration-count: infinite

/* keyframes */

@keyframes appear-create
  0%  
    opacity: 0
  12%  
    opacity: 0
  13%
    opacity: 1
  90%
    opacity: 1
  100% 
    opacity: 0

@keyframes dash
  0%
    stroke-dashoffset: 1000
  50%
    stroke-dashoffset: 0
  100%
    stroke-dashoffset: 1000


