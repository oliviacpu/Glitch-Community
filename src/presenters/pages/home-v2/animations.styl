/* For > large displays, only show animations on hover
*/
@media(min-width: 900px)
  a:not(:hover) .animation
    animation: none !important
    -webkit-animation: none !important
   
  /* overrides for code animation */
  .animationPath
    stroke-dashoffset: 1
  
  .browser, .sparkles
    opacity: 1
  
  /* overrides for team animation */
  .user2, .user3, .user2Shape, .user3Shape
    opacity: 1
  
  .user2Line1, .user2Line2, .user3Line1
    transform: scale(1,1)

/* Don't animate SVGs if the user has turned on prefers reduced motion in system-wide preferences
https://developer.mozilla.org/en-US/docs/Web/CSS/@media/prefers-reduced-motion
*/

@media(prefers-reduced-motion: reduce)
  .animation 
    animation: none !important
    -webkit-animation: none !important
  
  /* overrides for code animation */
  .animationPath
    stroke-dashoffset: 1
  
  .browser, .sparkles
    opacity: 1
  
  /* overrides for team animation */
  .user2, .user3, .user2Shape, .user3Shape
    opacity: 1
  
  .user2Line1, .user2Line2, .user3Line1
    transform: scale(1,1)    
  


