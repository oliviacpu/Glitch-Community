@require '../constants'

.notification
  background-color: notification
  color: primary-background
  font-size: 12px
  font-weight: 600
  padding: 5px 8px
  border-radius: 5px
  max-width: 260px
  animation-name: hideme
  animation-delay: 2.5s
  animation-duration: 0.1s
  animation-iteration-count: 1
  animation-direction: forward
  animation-fill-mode: forwards
  animation-timing-function: ease-out
  margin-bottom: 5px
  line-height: 16px
  p
    margin: 0
    font-weight: inherit
  hr
    opacity: 0.5
    height: 1px
    border: 0
    background-color: primary-background
  progress
    margin-left: 5px
  a
    margin: 5px auto
  .loader
    width: 20px
    height: 19px
    margin: 0
    margin-right: 5px
  &:hover,
  &:focus,
  &.persistent
    animation: none
  &.success
    background-color: success
  &.error
    background-color: error
  &.inline
    position: absolute
    width: max-content
    left: 2px
    top: 25px

@keyframes hideme
  0%
    opacity: 1
  100%
    opacity: 0