@import '../constants.styl'

.container
  color: inherit
  display: block
  border-radius: 5px
  background-color: #e5e5e5
  font-size: 14px
  text-decoration: none
  &:hover
    text-decoration: none
    .itemButtonWrap
      width: fit-content
      height: fit-content
      border-radius: 5px
      box-shadow: 2px 2px 0 primary
      
.mainContent
  display: flex
  align-items: flex-start
  padding: 12px
  word-break: break-word
  
.login
  padding-top: 7px
  color: tertiary

.nameLoginWrap
  margin-bottom: 8px   
  
.avatarWrap
  flex: 0 0 30%
  @media (max-width: mediumSmallViewport)
    flex: 0 0 75px
  
.avatar
  width: 100%
  max-width: 75px
  border-radius: 50%
  
.body
  flex: 1 1 auto
  padding-left: 0.5rem
  word-break: break-word
  // for markdown component
  p
    margin-bottom: 0
    word-break: break-word
    a
      color: inherit