@require '../constants'

.btn
  background-color: white
  border: solid primary 2px
  border-radius: 5px
  color: primary
  cursor: pointer
  display: inline-block
  font-family: sansserif
  font-size: 14px
  font-weight: 600
  line-height: 14px
  // bottom padding = top padding - 2px to account for descenders in Benton Sans
  // https://fogcreek.slack.com/archives/CB4EHAJ2J/p1560438878129400?thread_ts=1560436476.127600&cid=CB4EHAJ2J
  padding: 7px 12px 5px 12px
  position: relative
  text-align: left
  text-decoration: none
  &.matchBackground
    background-color: inherit
  &.hasImage
    padding-right: 35px
    &.padLeft
      padding-left: 35px
      padding-right: 12px
  // we display the sunglasses wider than the other emoji, so we need to add extra padding
  &.hasSunglassesEmoji
    padding-right: 45px
    &.padLeft
      padding-left: 45px
    .imageContainer img
      width: auto
      height: 15px
  &.dangerZone
    &:hover
      background-color: warning-background
  &:hover, &:focus
    background-color: secondary-background
    text-decoration: none
  &:active,
  &.active
    background-color: secondary-background-active
    color: primary

  &[disabled]
    opacity: .5
    pointer-events: none
    color: primary 
    
  &.cta
    color: primary
    background-color: cta
    box-shadow: 4px 4px 0 primary
    &:hover
      background-color: cta
      box-shadow: 2px 2px 0 primary
    &:active
      background-color: cta
      box-shadow: none
      
  &.small
    font-size: 12px
    // bottom padding = top padding - 2px to account for descenders in Benton Sans
    // https://fogcreek.slack.com/archives/CB4EHAJ2J/p1560438878129400?thread_ts=1560436476.127600&cid=CB4EHAJ2J
    padding: 5px 8px 3px 8px
    &.hasImage
      padding-right: 28px
      .imageContainer
        right: 8px
      &.alignLeft
        padding-right: 8px
        padding-left: 28px
        .imageContainer
          right: initial
          left: 8px
    // we display the sunglasses wider than the other emoji, so we need to add extra padding
    &.hasSunglassesEmoji
      padding-right: 38px
      &.padLeft
        padding-left: 38px
      .imageContainer img
        width: auto
        height: 13px
    &.hasNarrowEmoji
      padding-right: 22px
      .imageContainer
        right: 5px
      &.alignLeft
        padding-right: 8px
        padding-left: 22px
        .imageContainer
          right: initial
          left: 5px

  &.tertiary
    color: tertiary
    border-width: 1px
    border-color: secondary
    &:hover
      color: primary
      border-color: line-on-secondary-background
  
  &.unstyled:hover
    opacity: 1;
    background-color: #eaeaea;
    border-radius: 5px;
    border: none;

.transparentButton
  cursor: pointer
  display: block
  text-align: inherit
  width: 100%
  
button.transparentButton:hover,
button.transparentButton:focus
  background: none
  
.btn.unstyled,
.transparentButton
  padding: 0
  border-radius: 0
  border: none
  background: none
  font-weight: normal
  
    
// apply hover effects if decorative button is inside a link/button that's being hovered
a:hover .btn.decorative,
button:hover .btn.decorative
  background-color: secondary-background
  
.imageContainer
  position: absolute
  right: 12px
  top: 0
  height: 100%
  display: flex
  align-items: center
  &.alignLeft
    left: 12px
    right: initial
  &.up1
    top: -1px
  