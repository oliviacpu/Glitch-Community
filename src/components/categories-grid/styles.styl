@import '../constants.styl';

// define grid-template-columns in the component it's used
.categoriesGrid
  display: grid
  grid-gap: u2
  padding: 0
.categoriesGridItem
  list-style: none
  text-align: center
  background: var(--bg-color);
  border-radius: u05
  font-size: 12px
  font-weight: 600
  a
    display: flex
    flex-direction: row
    align-items: center
    justify-content: center
    width: 100%
    height: 100%
    padding: u1 u2
    color: inherit
  img
    display: block
    height: 35px
    max-width: 45px
    margin-right: u2
  &.wrapItems
    a    
      padding: u2 u1 u1 u1
      flex-direction: column
      margin: 0 auto u1 auto
    img
      max-width: 60px
      height: 50px
      margin: 0 0 7px 0