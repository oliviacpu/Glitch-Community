@require '../constants'

.inputWrap
  display: inline-block
  width: 100%
  
.inputBorder
  position: relative
  border: none;
  border-bottom: 1px solid line-on-secondary-background
  border-radius: 0

.input
  font-family: monospace
  font-size: inherit
  font-weight: inherit
  color: inherit
  width: 100%
  padding: 4px 0px 2px
  resize: none
  border: none
  background: none
  transition: box-shadow .1s
  &:focus
    box-shadow: 0px 0px 3px 0px input-border-focused
    
.errorIcon
  position: absolute
  right: 0
  bottom: 2px