@import "../constants.styl"

.scrollContainer
  overflow-y: scroll
  max-height: 225px

.resultsList
  margin: 0
  padding: 6px
  list-style-type: none
    
.resultItemWrap + .resultItemWrap
  border-top: 1px solid section-line

.resultItem
  color: primary
  background-color: primary-background
  position: relative
  padding: 12px 6px
  &.withLink
    padding: 12px 70px 12px 6px
  &:hover,
  &.selected
    color: white
    background-color: general-link
    .resultDescription
      color: secondary-hover-on-color
    
.resultItemButton  
  color: inherit
      
.resultWrap
  display: flex

.resultInfo
  padding-left: 15px
  width: 100%
  
.active .resultName
  color: inherit

.resultName
  font-family: sansserif
  font-size: 14px
  
.resultDescription
  color: text-on-secondary-background
  word-break: break-word
  font-family: monospace
  font-size: 12px
  line-height: 18px
  padding-top: 6px
  
.linkButtonWrap
  position: absolute
  top: 0
  right: 0
  padding: 12px 6px
  
svg.arrow
  vertical-align: text-top