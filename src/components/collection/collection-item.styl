@require '../constants'

.header
  flex: 0 0 32px
  display: flex
  margin-bottom: 0.5rem
  align-items: center
  
.curator
  flex: 1 0 auto
  
.collectionItem
  display: flex
  flex-direction: column
  height: 100%
  position: relative
  margin-top: 0px
  font-size: 0.9rem
  border-radius: 5px
  min-width: 100%
  transition: 0.1s all

  a
    text-decoration: none
    color: primary
        
.linkBody
  flex: 0 1 130px
  display: flex
  padding: 12px
  border-top-right-radius: 5px
  border-top-left-radius: 5px
  word-break: break-word
  text-decoration: none
  font-weight: normal
  cursor: pointer
  &.showCurator:after
    top: 27px
    left: 8.5px
    border: solid transparent
    content: " "
    height: 0
    width: 0
    position: absolute
    pointer-events: none
    border-bottom-color: inherit
    border-width: 7px    
  .avatarContainer
    flex: 0 0 55px
    margin-right: 1rem
    svg
      width: 100%
      height: auto
  .nameDescriptionContainer
    overflow: hidden
  &:hover
    .nameDescriptionContainer
      .itemButtonWrap
        width: fit-content
        height: fit-content
        box-shadow: 2px 2px 0 primary
        border-radius: 5px
.projectsContainer
  flex: 1 0 auto
  padding: 10px
  background-color: secondary-background
  &.empty
    padding: 18px 18px 12px
    border-bottom-right-radius: 5px
    border-bottom-left-radius: 5px
    
.emptyCollectionText
  margin: 0
  
.projectsList
  --min-width: 180px    
  
.footerLink
  flex: 0 0 auto
  display: block
  padding: 0 12px 12px
  font-weight: 600
  font-size: 13px
  background-color: secondary-background
  border-bottom-right-radius: 5px
  border-bottom-left-radius: 5px
  &:hover
    text-decoration: underline

.smallContainer
  display: flex
  flex-direction: column
  height: 100%
  .curator
    margin-bottom: 10px
    
.smallCollectionLink
  color: inherit
  text-decoration: none
  display: flex
  flex-direction: column
  flex: 1 1 100%
  &:hover
    text-decoration: none
    
.bubbleContainer
  flex: 1 0 auto
  position: relative
  border-radius: 5px 5px 0 0
  word-break: break-word
  padding: 1rem 1rem  
  &:hover
    .itemButtonWrap
      width: fit-content
      height: fit-content
      box-shadow: 2px 2px 0 primary
      border-radius: 5px
  &.showCurator:after
    content: ""
    position: absolute
    width: 0
    height: 0
    left: 8px
    bottom: 100%
    border-color: inherit
    border-bottom-width: 6px
    border-bottom-style solid
    border-left: 6px solid transparent
    border-right: 6px solid transparent
  
.nameArea
  display: flex
  align-items: flex-start
  
.collectionNameWrap
  padding-top: 4px
  
.description
  font-size: 14px
  p
    margin-bottom: 0
    word-break: break-word
    &:empty
      margin-top: 0
    a
      color: link
  &.dark
    color: white
    a
      color: #D2FEFF
    code
      background: #252525
  
.collectionAvatarContainer
  flex: 0 0 40px
  margin-right: 0.5rem
  svg
    width: 100%
    height: auto
    
.smallProjectCount
  flex: 0 0 auto
  background-color: secondary-background
  padding: 0.5rem
  font-size: 14px
  font-weight: 600
  border-radius: 0 0 5px 5px
  
a:hover .smallProjectCount
  text-decoration: underline
  
.bookmarkContainer
  width: 50px
  height: 50px
  margin-right: 1rem


.placeholder
  display: inline-block
  width: 30%
.placeholderText
  display: inline-block
  width: 50%
  vertical-align: top
  margin: 20px
  
svg.arrow
  vertical-align: text-top