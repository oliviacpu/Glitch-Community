@import '../constants.styl'

.grid
  --min-width: 200px

.link
  background-color: lightgrey
  color: primary
  display: flex
  flex-direction: column
  align-items: center
  justify-content: space-between
  padding: 15px 0
  border-radius: 5px
  font-size: 14px
  font-weight: 600
  height: 160px
    
.image
  flex-grow: 1
  max-height: 95px
  object-fit: scale-down
